{
  "env": {
    "browser": true,
    "es2021": true,
    "node": true
  },
  "extends": ["eslint:recommended", "plugin:react/recommended"],
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "plugins": ["react"],
  "rules": {
    "no-console": "off",
    "no-debugger": "error",
    "no-unused-vars": "warn",
    "no-undef": "error",
    "eqeqeq": "warn",
    "react/no-unescaped-entities": "warn",
    "react/no-unknown-property": "error",
    "jsx-a11y/anchor-is-valid": "off",
    "no-unused-expressions": "warn",
    "no-sequences": "warn",
    "no-mixed-operators": "warn"
  },
  "settings": {
    "react": {
      "version": "detect"
    }
  }
}
